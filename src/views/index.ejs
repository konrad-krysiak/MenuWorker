<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MenuWorker</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/main.css" rel="stylesheet" type="text/css" />
  </head>

  <!-- TODO - USE LAYOUT -->
  <% if(messages.info) { %>
  <div class="py-2 alert-box">
    <% messages.info.forEach(message => { %>
    <div class="alert alert-primary d-flex align-items-center gap-2" role="alert">
      <i class='bx bxs-info-circle'></i>
      <%= message %>
    </div>
    <% }); %>
  </div>
  <% } %>
  <% if(messages.success) { %>
  <div class="py-2 alert-box">
    <% messages.success.forEach(message => { %>
    <div class="alert alert-success d-flex align-items-center gap-2" role="alert">
      <i class='bx bxs-check-circle'></i>
      <%= message %>
    </div>
    <% }); %>
  </div>
  <% } %>
  <% if(messages.warning) { %>
  <div class="py-2 alert-box">
    <% messages.warning.forEach(message => { %>
    <div class="alert alert-warning d-flex align-items-center gap-2" role="alert">
      <i class='bx bxs-error'></i>
      <%= message %>
    </div>
    <% }); %>
  </div>
  <% } %>
  <% if(messages.error) { %>
  <div class="py-2 alert-box">
    <% messages.error.forEach(message => { %>
    <div class="alert alert-danger d-flex align-items-center gap-2" role="alert">
      <i class='bx bxs-error'></i>
      <%= message %>
    </div>
    <% }); %>
  </div>
  <% } %>


  <body class="position-relative">
    <section id="landing" class="landing-page vh-100 d-flex flex-column justify-content-center">
      <section id="navbar" class="landing-navbar position-fixed w-100 top-0">
        <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <a class="navbar-brand ms-4 user-select-none" href="#">MenuWorker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center text-lg-start p" id="navbarText">
              <ul class="navbar-nav ms-auto mb-2 mb-lg-0 me-4 navbar-buttons">
                <% if(authenticated) { %>
                <li class="nav-item">
                  <a class="btn auth-button fs-5" href="/auth/login">Dashboard</a>
                </li>
                <% } else { %>
                <li class="nav-item">
                  <a class="btn auth-button fs-5" href="/auth/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="btn auth-button fs-5" href="/auth/register">Register</a>
                </li>
                <% }; %>
              </ul>
            </div>
          </div>
        </nav>
      </section>

      <section class="landing-body container mt-4">
        <div class="row w-100">
          <div class="col-12 col-md-6">
            <div class="landing-body__heading h-100 d-flex flex-column justify-content-center align-items-center">
              <div class="w-100">
                <div class="text-center text-md-start">
                  <span>Restaurant management system</span>
                </div>
                <ul>
                  <li>Create Menu in various languages</li>
                  <li>Improve SEO of your restaurant</li>
                  <li>Generate menu PDF with single click</li>
                  <li>Share your menu with QR code</li>
                </ul>
              </div>
            </div>
          </div>
          <div class="d-none d-md-block col-6 text-center">
            <div class="landing-body__pizza">
              <img src="/images/pizza.png" alt="pizza" class="rotate" />
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12 d-flex justify-content-center">
            <a href="/auth/register" class="tryit-landing-button">TRY IT FOR FREE</a>
          </div>
        </div>
      </section>
    </section>

