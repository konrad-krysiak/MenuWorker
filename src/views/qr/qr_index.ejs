<section class="container py-4">
  <h2 class="text-center">QR Code Generator</h2>
  <p class="text-center">Choose menu for QR code generation.</p>

  <div class="row mt-4">
    <div class="col-10 offset-1">
      <div class="list-group">
        <% restaurants.forEach((restaurant) => { %>

        <!-- <a href="/dashboard/qr/<%= restaurant.id %>" class="list-group-item list-group-item-action text-break"> -->
        <div class="list-group-item text-break">
          <div class="fw-bold fs-5"><%= restaurant.name %></div>
          <table class="table text-center mt-2">
            <thead>
              <tr>
                <th scope="col" class="col-3">name</th>
                <th scope="col" class="col-7">QR Code URL</th>
                <th scope="col" class="col-2">public</th>
              </tr>
            </thead>
            <tbody>
              <% restaurant.Menus.forEach((menu) => { %>
              <tr>
                <td>
                  <a href="/dashboard/menus/<%= menu.id %>/edit">
                    <%= menu.name %>
                  </a>
                </td>
                <td>
                  <a href="/dashboard/qr/<%= menu.id %>">
                    <%= menuUrls[menu.id] %>
                  </a>
                </td>
                <td>
                  <% if(menu.public) { %>
                  <span class="text-success fw-bold">Yes</span>
                  <% } else { %>
                  <span class="text-danger fw-bold">No</span>
                  <% } %>
                </td>
              </tr>
              <% }) %>


            </tbody>
          </table>
        </div>
        <!-- </a> -->
        <% }); %>
      </div>
    </div>
  </div>
  </div>
