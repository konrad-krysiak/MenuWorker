<section class="container py-4 restaurants_index">
  <h2 class="text-center">Restaurants</h2>
  <div class="row mb-3">
    <div class="col text-center text-md-end">
      <a href="/dashboard/restaurants/new" class="custom-button-primary custom-button-primary--dark">ADD NEW RESTAURANT</a>
    </div>
  </div>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="table-responsive">
          <table class="table mb-0 text-center">
            <thead>
              <tr>
                <th scope="col">name</th>
                <th scope="col">created at</th>
                <th scope="col">Menus</th>
                <th scope="col" width="10%">Edit</th>
                <th scope="col" width="10%">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% restaurants.forEach(restaurant => { %>

              <tr class="restaurant-item">
                <th scope="row" class="text-start">
                  <a href="/dashboard/restaurants/<%= restaurant.id %>">
                    <%= restaurant.name %>
                  </a>
                </th>
                <td>
                  <span class="text-muted">
                    <%= restaurant.createdAt.toLocaleDateString("en-US") %>
                  </span>
                </td>
                <td><%= restaurant.Menus.length %></td>
                <td>
                  <a href="/dashboard/restaurants/<%= restaurant.id %>/edit">
                    <i class="bx bxs-edit edit"></i>
                  </a>
                </td>
                <td>
                  <form id="delete-restaurant-<%= restaurant.id %>-form" action="/dashboard/restaurants/<%= restaurant.id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE" />
                    <a href="javascript:{}" onclick="document.getElementById('delete-restaurant-<%= restaurant.id %>-form').submit();"><i class="bx bxs-folder-minus delete"></i></a>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
