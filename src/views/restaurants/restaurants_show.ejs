<section class="container py-3">
  <div class="row">
    <div class="col-12 px-5 text-end">
      <!-- <button class="custom-button-primary custom-button-primary--blue">Copy link</button> -->
      <a href="/dashboard/qr/<%= restaurant.id %>" class="custom-button-primary custom-button-primary--dark">QR Code</a>
      <a href="/dashboard/restaurants/<%= restaurant.id %>/edit" class="custom-button-primary custom-button-primary--green">Edit</a>
      <form class="d-inline" action="/dashboard/restaurants/<%= restaurant.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="custom-button-primary">Delete</button>
      </form>
    </div>
  </div>
  <div class="row gap-4 gap-md-0 pt-4">
    <div class="col-8 offset-2 col-md-5 offset-md-1">
      <h4>Information</h4>
      <div class="d-flex flex-column gap-2 text-center text-md-start ps-3 mt-3">
        <span>
          <strong>
            name:
          </strong>
          <%= restaurant.name %>
        </span>
        <span>
          <strong>
            address:
          </strong>
          <%= restaurant.address %>
        </span>
        <span>
          <strong>
            phone:
          </strong>
          <%= restaurant.phone %>
        </span>
        <span>
          <strong>
            description:
          </strong>
          <%= restaurant.description %>
        </span>
        <% if(restaurant.website) { %>
        <span>
          <strong>
            website:
          </strong>
          <%= restaurant.website %>
        </span>
        <% } else { %>
        <span>
          <strong>
            website:
          </strong>
          not provided
        </span>
        <% }; %>
        <span>
          <strong>
            public:
          </strong>
          <%= restaurant.public %>
        </span>
        <span>
      </div>
    </div>
    <div class="col-8 offset-2 col-md-5 offset-md-0 d-flex flex-column align-items-center gap-2">
      <h4>Opening hours</h4>
      <div class="row">
        not available
      </div>
    </div>
  </div>
  <hr class="my-5" />
  <div class="row">
    <h3 class="text-center">Available Menus</h3>
    <p class="text-center">This restaurant provides following menus</p>
    <div class="text-center px-5">
      <a href="/dashboard/menus/new?restaurantId=<%= restaurant.id %>" class="custom-button-primary mb-1">Add new menu</a>
    </div>
    <div class="list-group col-8 offset-2 my-3">
      <% restaurant.Menus.forEach((menu) => { %>
      <a href="/dashboard/menus/<%= menu.id %>/edit" class="list-group-item list-group-item-action d-flex justify-content-between px-5">
        <span class="fw-bold">
          <%= menu.name %>
        </span>
        <span><%= menu.itemCount %> items</span>
      </a>
      <% }); %>
    </div>
  </div>
</section>
