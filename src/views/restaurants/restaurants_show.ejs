<section class="container py-4">
  <div class="row mb-5">
    <div class="col text-center">
      <h1><%= restaurant.name %></h1>
    </div>
  </div>
  <div class="row gap-4 gap-md-0">
    <div class="col-8 offset-2 col-md-5 offset-md-1">
      <div class="d-flex flex-column gap-2 text-center text-md-start">
        <h3>Basic Information</h3>
        <span>Name: <%= restaurant.name %> </span>
        <span>Address: <%= restaurant.address %> </span>
        <span> Phone: <%= restaurant.phone %> </span>
        <span>Description: <%= restaurant.description %></span>
        <% if(restaurant.website) { %>
        <span>Home website: <%= restaurant.website %> </span>
        <% } %>
      </div>
    </div>
    <div
      class="col-8 offset-2 col-md-5 offset-md-0 d-flex flex-column align-items-center gap-2"
    >
      <h3>Opening hours</h3>
      <div class="row">
        <div class="col-4">
          <div>Monday</div>
          <div>Tuesday</div>
          <div>Wednesday</div>
          <div>Thrusday</div>
          <div>Friday</div>
          <div>Saturday</div>
          <div>Sunday</div>
        </div>
        <div class="col-8 text-end">
          <div>10:00 - 14:00</div>
          <div>10:00 - 14:00</div>
          <div>10:00 - 14:00</div>
          <div>10:00 - 14:00</div>
          <div>10:00 - 14:00</div>
          <div>10:00 - 14:00</div>
          <div>10:00 - 14:00</div>
        </div>
      </div>
    </div>
  </div>
  <!-- <div class="row d-none d-md-block">
    <div class="col-8 offset-2 my-5">
      <img
        src="https://media.wired.com/photos/59269cd37034dc5f91bec0f1/191:100/w_1280,c_limit/GoogleMapTA.jpg"
        alt="placeholder photo"
        class="w-100"
      />
    </div>
  </div> -->
  <hr class="my-5" />
  <div class="row">
    <h2>Available Menus</h2>
    <p>This restaurant provides following menus</p>
    <div class="col col-md-8 offset-md-2 d-flex flex-column gap-3">
      <% restaurant.Menus.forEach(menu => { %>
      <div
        class="restaurant-menu-card my-2 text-center border-start border-3 border-dark"
      >
        <div class="row p-3">
          <div class="col d-flex justify-content-center">
            <h5 class="my-auto"><%= menu.name %></h5>
          </div>
          <div class="col d-flex justify-content-center align-items-center">
            <a href="/dashboard/menus/<%= menu.id %>" class="btn btn-success"
              >Check it!</a
            >
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</section>
